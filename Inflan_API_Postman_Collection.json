  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set auth token from login response",
          "if (pm.request.url.path.includes('login')) {",
          "    pm.sendRequest(pm.request, function (err, response) {",
          "        if (response.json().token) {",
          "            pm.collectionVariables.set('auth_token', response.json().token);",
          "        }",
          "    });",
          "}"
        ]
      }
    }
  ]
